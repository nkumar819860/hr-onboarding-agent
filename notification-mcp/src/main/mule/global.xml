<?xml version="1.0" encoding="UTF-8"?>

<mule xmlns:email="http://www.mulesoft.org/schema/mule/email"
      xmlns:db="http://www.mulesoft.org/schema/mule/db"
      xmlns:http="http://www.mulesoft.org/schema/mule/http"
      xmlns="http://www.mulesoft.org/schema/mule/core"
      xmlns:doc="http://www.mulesoft.org/schema/mule/documentation"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd
                         http://www.mulesoft.org/schema/mule/http http://www.mulesoft.org/schema/mule/http/current/mule-http.xsd
                         http://www.mulesoft.org/schema/mule/db http://www.mulesoft.org/schema/mule/db/current/mule-db.xsd
                         http://www.mulesoft.org/schema/mule/email http://www.mulesoft.org/schema/mule/email/current/mule-email.xsd">

    <!-- Global Configuration Properties -->
    <configuration-properties file="config.properties" doc:name="Configuration properties" />

    <!-- HTTP Listener Configuration -->
    <http:listener-config name="HTTP_Listener_config" doc:name="HTTP Listener config">
        <http:listener-connection host="0.0.0.0" port="8085" />
    </http:listener-config>

    <!-- Primary Database Configuration (H2 or PostgreSQL based on config) -->
    <db:config name="Database_Config" doc:name="Database Config">
        <db:generic-connection 
            driverClassName="${db.driver}" 
            url="${db.url}" 
            user="${db.user}"
            password="${db.password}"
            connectionTimeout="5000"
            connectionTimeoutUnit="SECONDS"/>
    </db:config>

    <!-- Fallback H2 Database Configuration -->
    <db:config name="H2_Fallback_Config" doc:name="H2 Fallback Config">
        <db:generic-connection 
            driverClassName="org.h2.Driver" 
            url="jdbc:h2:file:./data/notification_fallback;DB_CLOSE_DELAY=-1;DB_CLOSE_ON_EXIT=FALSE" 
            user="sa"
            connectionTimeout="3000"
            connectionTimeoutUnit="SECONDS"/>
    </db:config>

    <!-- Error Handler for Database Failures -->
    <error-handler name="Database_Error_Handler" doc:name="Database Error Handler">
        <on-error-continue enableNotifications="true" logException="true" doc:name="On Error Continue" type="DB:CONNECTIVITY">
            <logger level="ERROR" doc:name="Log DB Error" message="Database connectivity error: #[error.description]. Falling back to mock data."/>
            <set-variable value="true" doc:name="Set Mock Mode" variableName="useMockData"/>
        </on-error-continue>
        <on-error-continue enableNotifications="true" logException="true" doc:name="On Error Continue" type="DB:QUERY_EXECUTION">
            <logger level="ERROR" doc:name="Log Query Error" message="Database query error: #[error.description]. Falling back to mock data."/>
            <set-variable value="true" doc:name="Set Mock Mode" variableName="useMockData"/>
        </on-error-continue>
    </error-handler>

    <!-- SMTP Email Configuration -->
    <email:smtp-config name="Gmail_SMTP" doc:name="Gmail SMTP">
        <email:smtp-connection 
            host="${smtp.host}" 
            port="${smtp.port}"
            user="${smtp.user}"
            password="${smtp.password}">
            <email:properties>
                <email:property key="mail.smtp.auth" value="${smtp.auth}" />
                <email:property key="mail.smtp.starttls.enable" value="${smtp.tls}" />
            </email:properties>
        </email:smtp-connection>
    </email:smtp-config>

</mule>
