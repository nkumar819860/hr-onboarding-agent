# HR Onboarding Agent - Environment Configuration
# Copy this file to .env and update with your actual values

# ========================================
# ANYPOINT PLATFORM CONNECTED APP CREDENTIALS
# ========================================
# Get these from your Anypoint Platform Connected App
ANYPOINT_CLIENT_ID=your-connected-app-client-id
ANYPOINT_CLIENT_SECRET=your-connected-app-client-secret
ANYPOINT_ORG_ID=your-organization-id
ANYPOINT_ENV=Sandbox

# ========================================
# APPLICATION NAMES (CloudHub Deployment)
# ========================================
AGENT_FABRIC_NAME=hr-onboarding-agent-fabric
EMPLOYEE_MCP_NAME=employee-onboarding-mcp-server
ASSET_MCP_NAME=asset-allocation-mcp-server
NOTIFICATION_MCP_NAME=notification-mcp-server

# ========================================
# DOCKER CONFIGURATION
# ========================================
DOCKER_REGISTRY=your-docker-registry.com
DOCKER_TAG=latest
COMPOSE_PROJECT_NAME=hr-onboarding

# ========================================
# DATABASE CONFIGURATION
# ========================================
# Mode: h2 (local files) | postgres (PostgreSQL) | mock (no database)
DB_MODE=postgres

# PostgreSQL Settings (for Docker and Cloud)
POSTGRES_DB=hr_onboarding
POSTGRES_USER=postgres
POSTGRES_PASSWORD=secure_password_123
POSTGRES_URL=jdbc:postgresql://postgres:5432/hr_onboarding

# H2 Database Settings (for local development)
H2_URL=jdbc:h2:file:./data/hr_onboarding;MODE=PostgreSQL;DB_CLOSE_DELAY=-1;AUTO_SERVER=TRUE

# ========================================
# RUNTIME CONFIGURATION
# ========================================
# Deployment mode: local (Docker) | cloud (CloudHub)
DEPLOYMENT_MODE=local

# CloudHub Settings
CLOUDHUB_REGION=us-east-1
CLOUDHUB_WORKER_TYPE=Micro
CLOUDHUB_WORKERS=1

# Local Development Ports
AGENT_FABRIC_PORT=8080
EMPLOYEE_MCP_PORT=8081
ASSET_MCP_PORT=8082
NOTIFICATION_MCP_PORT=8083
POSTGRES_PORT=5432
ADMINER_PORT=8090

# ========================================
# GROQ LLM CONFIGURATION
# ========================================
# Get your API key from: https://console.groq.com/keys
GROQ_API_KEY=your-groq-api-key-here
GROQ_MODEL=llama3-8b-8192
GROQ_TEMPERATURE=0.1
GROQ_MAX_TOKENS=4096
GROQ_TIMEOUT=30000

# ========================================
# SECURITY SETTINGS
# ========================================
API_KEY_HEADER=X-API-Key
API_KEY_VALUE=hr-agent-secure-key-2024

# JWT Settings (if implemented)
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRY=24h

# ========================================
# LOGGING AND MONITORING
# ========================================
LOG_LEVEL=INFO
ENABLE_METRICS=true
METRICS_PORT=9090

# ========================================
# NOTIFICATION SETTINGS
# ========================================
# Email Configuration (when implementing real notification service)
SMTP_HOST=smtp.company.com
SMTP_PORT=587
SMTP_USERNAME=hr-system@company.com
SMTP_PASSWORD=smtp_password
SMTP_FROM=HR System <hr-system@company.com>

# Slack Configuration (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#hr-notifications

# SMS Configuration (optional)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_FROM_NUMBER=+1234567890

# ========================================
# FEATURE FLAGS
# ========================================
ENABLE_ASSET_ALLOCATION=true
ENABLE_NOTIFICATIONS=true
ENABLE_DOCUMENT_MANAGEMENT=false
ENABLE_APPROVAL_WORKFLOW=false

# ========================================
# EXTERNAL INTEGRATIONS
# ========================================
# Active Directory / LDAP (if integrating)
LDAP_URL=ldap://company.com:389
LDAP_BASE_DN=DC=company,DC=com
LDAP_USERNAME=ldap_service_account
LDAP_PASSWORD=ldap_password

# Office 365 / Exchange (if integrating)
OFFICE365_TENANT_ID=your-tenant-id
OFFICE365_CLIENT_ID=your-client-id
OFFICE365_CLIENT_SECRET=your-client-secret

# Salesforce (if integrating)
SALESFORCE_USERNAME=integration@company.com
SALESFORCE_PASSWORD=sf_password
SALESFORCE_SECURITY_TOKEN=sf_security_token
SALESFORCE_INSTANCE_URL=https://company.my.salesforce.com
